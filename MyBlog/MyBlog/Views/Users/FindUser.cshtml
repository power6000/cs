@using MyBlog.Models.Users
@model UserModel

@{
    Layout = "~/Views/_BasicLayout.cshtml";
    
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "result",
        Url = Url.Action("FindUser"),
        LoadingElementDuration = 1000,
        LoadingElementId = "loading",
    };
}

<div class="container" style="margin-top: 20px;">

    @using (@Ajax.BeginForm("FindUser", ajaxOptions))
    {
        <div class="form-inline">
            <label class="">Search User: </label>

             @Html.TextBoxFor(x => x.Find, new {@class = "form-control"})

            <button type="submit" class="btn-success">Search</button>
        </div>
    }

</div>

<div id="loading" class="load" style="display: none; position: absolute; top: 25px; left: 500px;">
    <p>Loading...</p>
</div>

<div id="result"></div>



